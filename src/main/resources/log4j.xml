    <logger name="no.uio.tools.testdoc" additivity="false">
        <level value="debug"/>
        <appender-ref ref="A1"/> 
    </logger>

    <logger name="net.sf.ehcache.distribution" additivity="false">
        <level value="info" />
        <appender-ref ref="A1"/>
    </logger>
    
 
    <!-- Don't want warnings about EhCacheProvider not finding configuration -->
    <logger name="org.hibernate.cache.EhCacheProvider" additivity="false">
        <level value="error"/>
        <appender-ref ref="A1"/>
    </logger>
 
