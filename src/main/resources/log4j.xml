    <appender name="A1" class="org.apache.log4j.ConsoleAppender">                
        <layout class="org.apache.log4j.PatternLayout">                           
            <param name="ConversionPattern" value="%5p %d{dd.MM HH:mm:ss:SS} (%F:%M:%L) - %m%n" />                                                          
        </layout>                                                                 
