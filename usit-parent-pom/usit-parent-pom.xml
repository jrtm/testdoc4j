<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>no.uio.usit</groupId>
	<artifactId>usit-parent-pom</artifactId>
	<packaging>pom</packaging>
	<version>1.0.4</version>

	<profiles>

        <profile>
            <id>nexus</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

            <!--Enable snapshots for the built in central repo to direct -->
            <!--all requests to nexus via the mirror -->
            <repositories>

                <repository>
                    <id>nexus-public</id>
                    <url>https://repo.usit.uio.no/nexus/content/groups/public/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>

                <repository>
                    <id>nexus-internal</id>
                    <url>https://repo.usit.uio.no/nexus/content/groups/internal/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>

            </repositories>



            <pluginRepositories>

                <pluginRepository>
                    <id>nexus-internal</id>
                    <url>https://repo.usit.uio.no/nexus/content/groups/internal/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </pluginRepository>

                <pluginRepository>
                    <id>nexus-public</id>
                    <url>https://repo.usit.uio.no/nexus/content/groups/public/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </pluginRepository>

            </pluginRepositories>


            <distributionManagement>
                <!--
Kommentert ut pÃ¥ grunn av http://jira.codehaus.org/browse/MNG-4508
				<site>
					<id>repo.usit.uio.no</id>
					<url>scpexe://repo.usit.uio.no/www/var/virtual/no.uio.utv_80/htdocs/maven-sites/${project.artifactId}</url>
				</site>
-->
                <repository>
                    <id>repo.usit.uio.no</id>
                    <url>scpexe://repo.usit.uio.no/www/var/data/nexus/work/storage/internal-release</url>
                </repository>
                <snapshotRepository>
                    <id>repo.usit.uio.no</id>
                    <url>scpexe://repo.usit.uio.no/www/var/data/nexus/work/storage/internal-snapshots</url>
                </snapshotRepository>
            </distributionManagement>

        </profile>
		
		
		<profile>
			<id>bamboo</id>
			<distributionManagement>
				<site>
					<id>repo.usit.uio.no</id>
					<url>file:///www/var/virtual/no.uio.utv_80/htdocs/maven-sites/${project.artifactId}</url>
				</site>
				<repository>
					<id>repo.usit.uio.no</id>
					<url>file:///repo.usit.uio.no/www/var/data/nexus/work/storage/internal-release</url>
				</repository>
				<snapshotRepository>
					<id>repo.usit.uio.no</id>
					<url>file:///repo.usit.uio.no/www/var/data/nexus/work/storage/internal-snapshots</url>
				</snapshotRepository>
			</distributionManagement>
		</profile>
			
		
	</profiles>
	
	<build>
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ssh-external</artifactId>
				<version>1.0-beta-7</version>
			</extension>	
		</extensions>
	</build>

</project>
